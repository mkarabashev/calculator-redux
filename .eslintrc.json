{
  "env": {
    "browser": true
  },
  "globals": {
    "React": true
  },
  "extends": [ "eslint:recommended", "plugin:react/recommended" ],
  "plugins": [ "react" ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "rules": {
    "no-console": "off",
    "indent": [
        "warn",
        2,
        { "SwitchCase": 1 }
    ],
    "quotes": [
        "warn",
        "single"
    ],
    "semi": [
        "warn",
        "always"
    ]
  }
}
